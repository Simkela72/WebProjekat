@model WebApp.Models.FitnesCentar

<!DOCTYPE html>
<html>
<head>
    <title>Fitness Center Details</title>
</head>
<body>
    <h2>Fitness Center Details</h2>


    <div>
        <label>Name:</label>
        <span>@Html.DisplayFor(model => model.Naziv)</span>
    </div>


    <div>
        <label>Address:</label>
        <span>@Html.DisplayFor(model => model.Adresa)</span>
    </div>


    <div>
        <label>Date of Opening:</label>
        <span>@Html.DisplayFor(model => model.GodinaOtvaranja)</span>
    </div>

    <div>
        <label>Monthly Price:</label>
        <input type="text" id="cenaMesec" name="cenaMesec" value="@Model.CenaMesec" readonly/>
    </div>


    <div>
        <label>Yearly Price:</label>
        <input type="text" id="cenaGodina" name="cenaGodina" value="@Model.CenaGodina" readonly/>
    </div>


    <div>
        <label>Price for One Training:</label>
        <input type="text" id="jedanTrening" name="jedanTrening" value="@Model.JedanTrening" readonly/> 
    </div>


    <div>
        <label>Price for Group Training:</label>
        <input type="text" id="grupniTrening" name="grupniTrening" value="@Model.GrupniTrening" readonly/>
    </div>


    <div>
        <label>Price for Personal Trainer:</label>
        <input type="text" id="cenaPersonalTrener" name="cenaPersonalTrener" value="@Model.CenaPersonalTrener" readonly/>
    </div>


    <div>
        <label>Owner:</label>
        <span>@Html.DisplayFor(model => model.Vlasnik)</span>
    </div>
</body>
</html>
